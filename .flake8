[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    build,
    dist,
    venv,
    .venv,
    *.egg-info,
    .pytest_cache,
    .mypy_cache
ignore =
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    E501,  # line too long
    F401,  # imported but unused
    F403,  # unable to detect undefined names
    F405   # may be undefined
per-file-ignores =
    __init__.py:F401,F403
    tests/*:F401,F403,F405